{
    "name": "vscode-psl-lang",
    "displayName": "psl-lang",
    "description": "PSL (BMC PATROL Scripting Language) syntax highlighting for Visual Studio Code",
    "version": "1.3.0",
    "publisher": "sentrysoftware",
    "repository": "https://github.com/sentrysoftware/vscode-psl-lang",
    "license": "MIT",
    "engines": {
        "vscode": "^1.45.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:psl"
    ],
    "contributes": {
        "languages": [
            {
                "id": "psl",
                "aliases": [
                    "PSL",
                    "psl"
                ],
                "extensions": [
                    ".psl",
                    ".pslx",
                    ".pslh"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "psl",
                "scopeName": "source.psl",
                "path": "./syntaxes/psl.tmLanguage.json"
            }
        ]
    },
    "main": "./dist/extension",
    "scripts": {
        "vscode:prepublish": "webpack --mode production",
        "webpack": "webpack --mode development",
        "webpack-dev": "webpack --mode development --watch",
        "test-compile": "tsc -p ./"
    },
    "devDependencies": {
        "@types/node": "^8.10.25",
        "@types/vscode": "^1.34.0",
        "ts-loader": "^7.0.5",
        "tslint": "^5.16.0",
        "typescript": "^3.4.5",
        "webpack": "^4.43.0",
        "webpack-cli": "^3.3.12"
    }
}
